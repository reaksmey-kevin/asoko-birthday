<% if signed_in?%>
<div class="modal modal-form">
<div class="modal-header">
<h4>Create a new birthday</h4></div>
<div class="modal-body">
<%= form_for(@birthday) do |f| %>
  <% if @birthday.errors.any? %>
    <div id="error_explanation">
      <div class="span6 btn-warning"><p><%= pluralize(@birthday.errors.count, "error") %> prohibited this birthday from being saved:</p>  </div>

      <ul>
        <div class="span4">
      <% @birthday.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>

  <% end %>

  <div class="span4"><%= f.label :title %></div>
  <div class="span4"><%= f.text_field :title %></div>
  <div class="span4"><%= f.label :img %></div>
  <div class="span4"><%= f.file_field :img%></div>
  <div class="span4"><%= f.label :wish %></div>
  <div class="span4"><%= f.text_area :wish %></div>
</div>

<div class="modal-footer"><%= link_to "<< Back", birthdays_path %>
  <div class="pull-right">
    <%= f.submit "create ", class: "btn btn-primary" %>
  </div>
</div>
<% end %>

<%else%>
</div>
</div>
<script type="text/javascript">
window.location.href="/users/sign_in"
</script>


<%end%>
